# SwagTix Wallet Environment Variables
# Copy this file to .env and fill in the values

# Web3Auth Configuration
# Get your Client ID from the Web3Auth Developer Dashboard: https://dashboard.web3auth.io
WEB3AUTH_CLIENT_ID=
WEB3AUTH_NETWORK=testnet # Use 'mainnet' for production

# PulseChain Configuration
PULSECHAIN_RPC_URL=https://rpc.pulsechain.com
PULSECHAIN_FALLBACK_RPC_URL=https://pulsechain.publicnode.com
PULSECHAIN_EXPLORER_URL=https://scan.pulsechain.com

# Contract Addresses
EVENT_TICKET_CONTRACT=0x0000000000000000000000000000000000000000 # Replace with actual deployed contract address

# Analytics and Monitoring (Optional)
SENTRY_DSN=
MATOMO_URL=
MATOMO_SITE_ID=

# Feature Flags
ENABLE_DARK_MODE=true
ENABLE_QR_SCANNER=true
ENABLE_NOTIFICATIONS=true

# Build Configuration
NODE_ENV=development # Use 'production' for production builds
BUILD_VERSION=1.0.0
